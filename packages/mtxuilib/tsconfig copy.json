{
  "compilerOptions": {
    "target": "ESNEXT",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "WebWorker"
    ],
    "skipLibCheck": true,
    "allowJs": true,
    // "strict": true,
    // "strictNullChecks": true,111
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    // "emitDeclarationOnly": false,
    "incremental": true,
    "esModuleInterop": true,
    "types": [
      "node",
      "jest",
      "bun-types",
      "jquery"
    ],
    "moduleResolution": "bundler",
    // "module": "ESNext",
    "module": "ESNext" /* Specify what module code is generated. */,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve", //react-jsx
    // "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "rootDir": ".",
    "outDir": "dist",
    "plugins": [
      {
        "name": "next"
      }
    ],
    // 添加以下配置使 TypeScript 更宽松
    // "noImplicitAny": false, // 允许隐式的 any 类型
    // "strict": false, // 关闭严格模式
    // "ignoreDeprecations": "5.0", // 忽略某些废弃警告
    // "noUnusedLocals": false, // 允许未使用的局部变量
    // "noUnusedParameters": false, // 允许未使用的参数
    // "checkJs": false // 不检查 JavaScript 文件
  },
  "include": [
    "src",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    ".vscode",
    "public",
    "src/.storybook",
    "src/stories",
    "src/__test__"
  ]
}