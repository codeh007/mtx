{
  "compilerOptions": {
    "target": "ESNEXT",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "WebWorker"
    ],
    "skipLibCheck": true,
    "allowJs": true,
    "strict": true,
    "strictNullChecks": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "types": [
      "node",
      "bun-types"
    ],
    "moduleResolution": "bundler",
    "module": "ESNext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve", //react-jsx
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "outDir": "dist",
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "allowUnusedLabels": true,
    "allowUnreachableCode": true,
    "checkJs": false,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    ".next/types/**/*.ts",
    "src",
    ".next.dev/types/**/*.ts"
  ],
  "exclude": [
    "dist",
    "node_modules/**/*.*",
    ".vscode",
    "public"
  ]
}
