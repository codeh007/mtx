{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "mtmaiui",
      "type": "node-terminal",
      "request": "launch",
      "command": "bun run dev",
      "nodeVersionHint": 20,
      "cwd": "${workspaceFolder}/apps/mtmaiui",
      "skipFiles": ["<node_internals>/**", ".vscode/**", "/public", "/dist"],
      "env": {
        "MTM_SERVER_URL": "https://ht8383.yuepa8.com"
      }
    },
    {
      "name": "mtmag-next",
      "type": "node-terminal",
      "request": "launch",
      "command": "bun run dev",
      "nodeVersionHint": 20,
      "cwd": "${workspaceFolder}/apps/mtmag",
      "skipFiles": ["<node_internals>/**", ".vscode/**", "/public", "/dist"]
    },
    {
      "name": "mtmag",
      "type": "node",
      "request": "attach",
      "websocketAddress": "ws://localhost:9229/mtmag",
      "resolveSourceMapLocations": null,
      "attachExistingChildren": false,
      "autoAttachChildProcesses": false,
      "sourceMaps": true
    },
    {
      "name": "Express Debug",
      "type": "node-terminal",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "command": "bun run dev",
      "cwd": "${workspaceFolder}/packages/mtcrawl",
      "internalConsoleOptions": "openOnSessionStart"
    }
  ],
  "compounds": [
    {
      "name": "Debug Workers",
      "configurations": ["mtmag"],
      "stopAll": true
    }

