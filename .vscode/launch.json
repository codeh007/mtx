{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "mtmaiui",
      "type": "node-terminal",
      "request": "launch",
      "command": "bun run dev",
      "nodeVersionHint": 20,
      "cwd": "${workspaceFolder}/apps/mtmaiui",
      "skipFiles": ["<node_internals>/**", ".vscode/**", "/public", "/dist"]
    },
    {
      "name": "wrangler",
      "type": "node-terminal",
      "request": "launch",
      "command": "bun run wrangler:dev",
      "nodeVersionHint": 20,
      "cwd": "${workspaceFolder}/packages/mtxuilib",
      "skipFiles": ["<node_internals>/**", ".vscode/**", "/public", "/dist"]
    },
    {
      "name": "wrangler_dev",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/wrangler",
      "args": ["dev", "--local"],
      "nodeVersionHint": 22,
      "cwd": "${workspaceFolder}/packages/mtxuilib",
      "skipFiles": ["<node_internals>/**", ".vscode/**", "/public", "/dist"],
      "outFiles": ["${workspaceFolder}/dist/**/*.js"]
    }
  ]
}
