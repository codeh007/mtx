{
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/.next": true,
    "**/__pycache__": true,
    "**/.pytest_cache": true,
    "**/dist": true,
    "mtm/web/static": true,
    "**/.next.dev": true,
    "**/routeTree.gen.ts": true,
    "**/.wrangler": true
  },
  "files.watcherExclude": {
    "**/routeTree.gen.ts": true,
    "**/dist": true,
    "**/.next": true,
    "**/node_modules": true,
    "**/.next.dev": true,
    "**/.wrangler": true
  },
  "files.readonlyInclude": {
    "**/routeTree.gen.ts": true
  },
  "editor.fontFamily": "JetBrains Mono, 'Fira Code', Consolas, 'Courier New', monospace",
  "workbench.settings.editor": "ui",
  "workbench.colorTheme": "Default Light Modern",
  "workbench.iconTheme": "material-icon-theme",
  "terminal.integrated.fontFamily": "JetBrains Mono, 'Fira Code', Consolas, 'Courier New', monospace",
  "chat.editor.fontFamily": "JetBrains Mono, 'Fira Code', Consolas, 'Courier New', monospace",
  "debug.console.fontFamily": "JetBrains Mono, 'Fira Code', Consolas, 'Courier New', monospace",
  "notebook.output.fontFamily": "JetBrains Mono, 'Fira Code', Consolas, 'Courier New', monospace",
  "terminal.integrated.fontSize": 14,
  "window.commandCenter": false,
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#8c9aad",
    "activityBar.background": "#8c9aad",
    "activityBar.foreground": "#15202b",
    "activityBar.inactiveForeground": "#15202b99",
    "activityBarBadge.background": "#e4dade",
    "activityBarBadge.foreground": "#15202b",
    "commandCenter.border": "#e7e7e799",
    "sash.hoverBorder": "#8c9aad",
    "statusBar.background": "#6e8098",
    "statusBar.foreground": "#e7e7e7",
    "statusBarItem.hoverBackground": "#8c9aad",
    "statusBarItem.remoteBackground": "#6e8098",
    "statusBarItem.remoteForeground": "#e7e7e7",
    "titleBar.activeBackground": "#6e8098",
    "titleBar.activeForeground": "#e7e7e7",
    "titleBar.inactiveBackground": "#6e809899",
    "titleBar.inactiveForeground": "#e7e7e799"
  },
  "peacock.remoteColor": "#61dafb",
  "files.associations": {
    "*.css": "tailwindcss",
    "wrangler.json": "jsonc"
  },
  "terminal.integrated.env.linux": {
    "MY_ENV_VAR": "my_value"
  },
  "peacock.color": "#6e8098",
  "go.testExplorer.enable": true,
  "tailwindCSS.includeLanguages": {
    "plaintext": "html"
  },
  "tailwindCSS.classAttributes": ["class", "className", "ngClass", "classActivate", "listClasses"],
  "terminal.integrated.scrollback": 10000,
  "explorer.compactFolders": false,
  "breadcrumbs.filePath": "off",
  "window.zoomLevel": 0,
  "git.ignoreLimitWarning": true,
  "editor.tabCompletion": "on",
  "diffEditor.codeLens": true,
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports.biome": "explicit",
    "quickfix.biome": "explicit"
  },
  "editor.defaultFormatter": "biomejs.biome",
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[html]": {
    // "editor.defaultFormatter": "vscode.html-language-features",
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[json]": {
    // "editor.defaultFormatter": "vscode.json-language-features"
    "editor.defaultFormatter": "biomejs.biome"
  },
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  // "editor.codeActionsOnSave": {
  //   "quickfix.biome": "explicit"
  // }

  // "editor.codeActionsOnSave": {
  //   // "source.fixAll": "explicit",
  //   // "source.fixAll.eslint": "explicit",
  //   // "source.organizeImports": "explicit",
  //   "source.addMissingImports": "explicit",
  //   // 用 biome 替换 vscode 默认的 代码修正功能
  //   "quickfix.biome": "explicit",
  //   "source.organizeImports.biome": "explicit"
  // },

  "prettier.enable": false
}
