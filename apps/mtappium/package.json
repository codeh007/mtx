{
  "name": "mtapppium",
  "version": "0.0.1",
  "license": "MIT",
  "type": "module",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": ["./src/index.ts", "./src/index.tsx", "./dist/index.js"],
      "import": ["./src/index.ts", "./src/index.tsx", "./dist/index.js"]
    },
    "./*": {
      "types": ["./src/*.ts", "./src/*/index.ts", "./src/*.tsx", "./src/*/index.tsx"],
      "import": [
        "./src/*.ts",
        "./src/*.tsx",
        "./src/*/index.ts",
        "./src/*/index.tsx",
        "./dist/*.js",
        "./dist/*/index.js"
      ],
      "require": [
        "./dist/*.js",
        "./dist/*/index.js",
        "./src/*.ts",
        "./src/*/index.ts",
        "./src/*.tsx",
        "./src/*/index.tsx"
      ]
    }
  },
  "files": ["dist"],
  "bin": {
    "mtmaiadmin": "dist/main.js"
  },
  "scripts": {
    "build": "bun src/cli/main.ts build",
    "build3--": "dotenv -e ../../env/mtmaiadmin.env -- tsx src/db/migrate && next build",
    "db:migrate": "dotenv -e ../../env/mtmaiadmin.env -- tsx src/db/migrate",
    "dev": "dotenv -e ../../../gomtm/env/mtmaiadmin.env -- next dev",
    "db:gen": "drizzle-kit generate",
    "drizzle:migrate": "tsx ./db/migrate.ts",
    "db:push": "drizzle-kit push",
    "preview": "vite preview"
  },
  "dependencies": {
    "appium": "^2.18.0"
  },
  "devDependencies": {
    "appium-uiautomator2-driver": "^4.2.3",
    "webdriverio": "^9.14.0"
  }
}
