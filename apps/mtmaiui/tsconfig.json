{
  "compilerOptions": {
    "module": "ESNext",
    "useDefineForClassFields": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    // "jsx": "react-jsx",
    "jsx": "preserve", //react-jsx
    "allowImportingTsExtensions": true,
    "lib": ["DOM", "DOM.iterable", "ES2022", "esnext", "WebWorker"],
    "types": ["node", "vite/client", "jest", "bun-types", "jquery"],
    "moduleResolution": "bundler",
    "rootDir": ".",
    // "baseUrl": "./src",
    // "paths": {
    //   "mtmaiui": [
    //     "./src/*"
    //   ]
    // },
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "target": "ES2022",
    "allowJs": true,
    "incremental": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
    // "noUncheckedSideEffectImports": true
  },
  "include": [".next/types/**/*.ts", "src", ".next.dev/types/**/*.ts", "src/type/index.ts"],
  "exclude": ["node_modules", "dist"]
}
